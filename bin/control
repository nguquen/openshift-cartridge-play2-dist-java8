#!/bin/bash -e

function start {
    echo "starting"
    cd $OPENSHIFT_REPO_DIR
    BIN_NAME=$(ls bin/ | head -n 1)
    chmod +x bin/$BIN_NAME
    nohup bin/$BIN_NAME -Dhttp.port=${OPENSHIFT_PLAY2_PORT} -Dhttp.address=${OPENSHIFT_PLAY2_IP} > $OPENSHIFT_PLAY2_LOG_DIR/play.log 2>&1 &
}

function stop {
  echo "stopping"
  cd $OPENSHIFT_REPO_DIR
  ls -la
  if [ ! -f RUNNING_PID ]; then
    echo "not found RUNNING_PID, killall java!"
    killall java || true
  else
    echo "kill pid $(cat RUNNING_PID)"
    kill $(cat RUNNING_PID)
    rm RUNNING_PID
  fi
  
}

function restart {
    stop
    start
}

function tidy {
    echo "tidy"
    shopt -s dotglob
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
